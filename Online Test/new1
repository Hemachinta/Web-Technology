<?php
$servername = "localhost";
$username = "root";
$password = "";
$dbname = "test";

$conn = new mysqli($servername, $username,'', $dbname);

if (!$conn) {
    die("Connection failed: " . mysqli_connect_error());
}
$sql = mysqli_query($conn, "SELECT * FROM mcq");
$count=0;
   while($row = mysqli_fetch_array($sql)) {
   $a[]=$row['Qno'];
   $b[] = $row['Question'];
   $c[]=$row['Option1'];
   $d[]=$row['Option2'];
   $e[]=$row['Option3'];
   $f[]=$row['Option4'];
   $g[]=$row['Answer'];
