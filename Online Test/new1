		var seconds=60;
          function displayseconds(){
               seconds -=1;
			   if(seconds==10){
				   alert("Time Remaining only 10 seconds");
			   }
               document.getElementById("secondsdisplay").innerText="Time remaining :"+seconds+"seconds";
          }
          setInterval(displayseconds,1000);
