			var q8 = document.forms["testForm"]["Q8"].value;
			var q9 = document.forms["testForm"]["Q9"].value;


			var score = 0;

			if (q1 == "C") {
				score++;
			}


			if (q2 == "D") {
				score++;
			}

			if (q3 == "B") {
				score++;
			}
			if (q4 == "B") {
				score++;
			}


			if (q5 == "D") {
				score++;
			}

			if (q6 == "B") {
				score++;
			}
			if (q7 == "A") {
				score++;
			}


			if (q8 == "B") {
				score++;
			}

			if (q9 == "A") {
				score++;
			}

              alert("you scored"+score +"out of 10");
              localStorage.setItem("result",score);
              window.location.href="score.html";
		}
		</script>
