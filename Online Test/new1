		function validateTest() {
			var q1 = document.forms["testForm"]["Q1"].value;
			var q2 = document.forms["testForm"]["Q2"].value;
			var q3 = document.forms["testForm"]["Q3"].value;
			var q4 = document.forms["testForm"]["Q4"].value;
			var q5 = document.forms["testForm"]["Q5"].value;
			var q6 = document.forms["testForm"]["Q6"].value;
